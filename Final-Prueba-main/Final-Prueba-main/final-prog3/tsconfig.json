{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,

    // ðŸ”½ Agregado para soportar rutas absolutas
    "baseUrl": ".",
    "paths": {
      "/src/*": ["src/*"]
    }
  },
  "include": ["src", "vite.config.ts"]
}